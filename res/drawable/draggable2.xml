<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- dropshadow -->
    <item>
        <shape>
            <solid android:color="#60000000" />
            <padding android:top="0dp" android:right="3dp" android:bottom="3dp" android:left="0dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- content background -->
    <item  android:id="@+id/draggableshape">
        <shape>
            <solid android:color="#ffffffff" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>

